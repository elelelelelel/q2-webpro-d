@model IEnumerable<MVCMenus.Entities.Menus>

@{
    ViewBag.Title = "Index";
}

<h2>Book List</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BooksId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BooksName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BooksId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BooksName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReleaseDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { code = item.BooksId }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Details", "Details", new { code = item.BooksId }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Delete", "Delete", new { code = item.BooksId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Add New Book", "Create")
</p>
